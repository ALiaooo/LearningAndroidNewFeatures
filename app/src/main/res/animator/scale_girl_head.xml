        android:duration="125"
        android:propertyName="scaleX"
        android:valueType="floatType"
        android:valueFrom="1f"
        android:valueTo="0.5f"/>

    <objectAnimator
        android:duration="125"
        android:propertyName="scaleX"
        android:valueType="floatType"
        android:valueFrom="0.5f"
        android:valueTo="1f"/>

    <objectAnimator
        android:duration="125"
        android:propertyName="scaleX"
        android:valueType="floatType"
        android:valueFrom="1f"
        android:valueTo="1.5f"/>

    <objectAnimator
        android:duration="125"
        android:propertyName="scaleX"
        android:valueType="floatType"
        android:valueFrom="1.5f"
        android:valueTo="1f"/>

</set>
